<Window x:Class="MessengerClient.AuthenticationDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerClient"
        mc:Ignorable="d"
        Title="AuthenticationDialogWindow" Height="146.823" Width="378.813"
        ResizeMode="NoResize">
    <StackPanel>
        <TextBlock Margin="0 10 0 0" HorizontalAlignment="Center">Please, enter your username.</TextBlock>
        <TextBox x:Name="textBoxUsername" Width="300" Margin="0 10 0 0" HorizontalAlignment="Center"></TextBox>
        <Grid Margin="40 10 40 0">
            <Button x:Name="btnRegister"  Content="Register" HorizontalAlignment="Left" Width="100" Click="btnRegister_Click"/>
            <Button x:Name="btnSubmit"  Content="Submit" HorizontalAlignment="Right" Width="100" Click="btnSubmit_Click"/>
        </Grid>
    </StackPanel>
</Window>
